<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingsSearchBarContainerStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?colorPrimary</item>
    </style>

    <style name="CustomCursor" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">?colorOnPrimary</item>
    </style>

    <style name="SettingsSearchBar.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="startIconTint">?colorOnPrimary</item>
        <item name="endIconTint">?colorOnPrimary</item>
        <item name="android:theme">@style/CustomCursor</item>
    </style>

    <style name="SettingsSearchBar.TextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">?colorOnPrimary</item>
        <!-- done in code to add use colorOnPrimary with transparency without forcing a custom theme -->
        <!--        <item name="android:textColorHighlight">?colorPrimaryDark</item>-->
    </style>

</resources>